<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/transparent"
            android:text="Click me!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCounterImage"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/drop"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoToShop"
        app:layout_constraintEnd_toStartOf="@+id/tvMoneyCounter"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="32dp" />


    <Button
        android:id="@+id/btnGoToShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        style="@style/btnMainStyle"
        />


    <TextView
        android:id="@+id/tvMoneyCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/*moneyCounter*/"
        app:layout_constraintBottom_toBottomOf="@+id/btnGoToShop"
        app:layout_constraintEnd_toStartOf="@+id/btnGoToShop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        style="@style/tvMainStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>
